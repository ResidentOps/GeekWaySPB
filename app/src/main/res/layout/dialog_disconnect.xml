<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="280dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/textDisconnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/text_disconnection"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageConnectionLost"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_below="@+id/textDisconnection"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="105dp"
        android:tint="@color/black"
        app:srcCompat="@drawable/ic_wifi_off"
        android:contentDescription="image" />

    <TextView
        android:id="@+id/textCheckConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageConnectionLost"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="sans-serif"
        android:text="@string/text_check_internet"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>